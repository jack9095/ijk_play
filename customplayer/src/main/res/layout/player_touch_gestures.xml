<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/player_touch_gestures_fl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/player_touch_center_bg"
    android:gravity="center_vertical">
    <!-- 声音-->
    <LinearLayout
        android:id="@+id/player_touch_gestures_volume_ll"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/player_touch_gestures_volume_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/player_volume_up_white"/>

        <TextView
            android:id="@+id/player_touch_gestures_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="@android:color/white"
            android:textSize="18dp"/>
    </LinearLayout>

    <!-- 亮度-->
    <LinearLayout
        android:id="@+id/player_touch_gestures_brightness_ll"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/player_touch_gestures_brightness_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/player_brightness_white"/>

        <TextView
            android:id="@+id/player_touch_gestures_brightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="50%"
            android:textColor="@android:color/white"
            android:textSize="16dp"/>
    </LinearLayout>

    <!-- 快进快退-->
    <LinearLayout
        android:id="@+id/player_touch_gestures_fastForward_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <!--快进或者快退了多少-->
        <TextView
            android:id="@+id/player_touch_gestures_fastForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="50%"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <!--当前的播放点-->
            <TextView
                android:id="@+id/player_touch_gestures_fastForward_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textColor="@android:color/white"
                android:textSize="16dp"/>

            <!--视频总时长-->
            <TextView
                android:id="@+id/player_touch_gestures_fastForward_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textColor="@color/Grey_300"
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
